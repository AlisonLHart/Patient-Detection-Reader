<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.2,.2,.2,1)
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.15, .15, .15,1)
            Rectangle:
                size: self.size
                pos: self.pos
        
        FlatButton:
            id: file_trigger
            text: 'File'
            on_release: file_dropdown.open(self)
            size_hint: (.1,None)
            height: 30

            Widget:
                on_parent: file_dropdown.dismiss()
            
                DropDown:
                    id: file_dropdown
                    Button:
                        id: close
                        text: 'quit'
                        size_hint_y: None
                        height: 30
        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint: (.9,None)
            height: 30
    BoxLayout:
        id: content_nav
        
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.15, .15, .15,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: user_toggle
                text: 'Manage Users'
                size_hint_y: .1
                state: 'down'
                background_color: (.15, .15, .15,1)
                background_normal: ''
                group: 'adminNavs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: patient_toggle
                text: 'Manage Patients'
                size_hint_y: .1
                background_color: (.15, .15, .15,1)
                background_normal: ''
                group: 'adminNavs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: analysis_toggle
                text: 'Patient Analysis'
                size_hint_y: .1
                background_color: (.15, .15, .15,1)
                background_normal: ''
                group: 'adminNavs'
                on_state: root.change_screen(self)
            Label:
                id: sp
                text: ''
                size_hint_y: .7
        BoxLayout:
            id: content
            size_hint_x: .8
            padding: (20,10)
            ScreenManager:
                id: scrnMngr
                Screen:
                    id: scrnContent
                    name: 'scrnContent'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrnContents
                        BoxLayout:
                            id: opsFields
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: opsBtns
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crudAdd
                                text: 'Add User'
                                on_release: root.add_user_fields()
                            Button:
                                id: crudUpdate
                                text: 'Update User'
                            Button:
                                id: crudRemove
                                text: 'Remove User'
                Screen:
                    id: scrnPatientContent
                    name: 'scrnPatientContent'
                Screen:
                    id: scrnAnalysisContent
                    name: 'scrnAnalysisContent'
