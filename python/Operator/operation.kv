<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.2,.2,.2, 1)
        Rectangle:
            size:self.size 
            pos:self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.1,.1,.1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Label:
            text: 'Patient Detection Reader'
            size_hint_x: .9
            bold: True
        FlatButton:
            id: loggedin_user
            text: 'jdoe'
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Button:
            id: cur_patient
            text: 'Current Patient: '
            background_normal: ''
            background_color:(.15,.15,.15, 1)
            size_hint_x: .4
        Button:
            id: cur_condition
            text: 'Default Condition'
            background_normal: ''
            background_color: (.15,.15,.15, 1)
        Button:
            id: cur_reset
            text: 'RESET'
            background_normal: ''
            background_color: (.15,.15,.15, 1)
            size_hint_x: .2
    BoxLayout:
        BoxLayout:
            id: patient_details
            orientation: "vertical"
            size_hint_x: .8

            BoxLayout:
                id: patient_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color: 
                        rgba: (.15,.15,.15, 1)
                    Rectangle:
                        size: self.size
                        pos:self.pos
                FlatButton:
                    text: 'Check in date'
                    size_hint_x: .1
                FlatButton:
                    text: 'Patient ID'
                    size_hint_x: .2
                FlatButton:
                    text: 'Room number'
                    size_hint_x: .1
                FlatButton:
                    text: 'EMG #'
                    size_hint_x: .2
                FlatButton:
                    text: 'Primary nurse'
                    size_hint_x: .2
                FlatButton:
                    text: 'Primary Doctor'
                    size_hint_x: .2

            BoxLayout:
                id: patient_inputs
                size_hint_y: None
                height: 30
                TextInput:
                    id: Check_inp
                    size_hint_x: .1
                TextInput:
                    id: PID_inp
                    size_hint_x: .2
                TextInput:
                    id: RN_inp
                    size_hint_x: .1
                TextInput:
                    id: EMG_inp
                    size_hint_x: .2
                TextInput:
                    id: PN_inp
                    size_hint_x: .2
                TextInput:
                    id: PD_inp
                    size_hint_x: .2
        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2