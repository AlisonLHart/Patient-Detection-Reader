<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.2,.2,.2, 1)
        Rectangle:
            size:self.size 
            pos:self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.1,.1,.1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Label:
            text: 'Patient Detection Reader'
            size_hint_x: .9
            bold: True
        FlatButton:
            id: loggedin_user
            text: 'jdoe'
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Button:
            id: cur_patient
            text: 'Current Floor: '
            background_normal: ''
            background_color:(.15,.15,.15, 1)
            size_hint_x: .4
        Button:
            id: cur_condition
            text: 'Current Block:'
            background_normal: ''
            background_color: (.15,.15,.15, 1)
    BoxLayout:
        padding: 10
        BoxLayout:
            id: patient_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10

            BoxLayout:
                id: patient_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color: 
                        rgba: (.15,.15,.15, 1)
                    Rectangle:
                        size: self.size
                        pos:self.pos
                FlatButton:
                    text: 'Check In'
                    size_hint_x: .1
                FlatButton:
                    text: 'Patient ID'
                    size_hint_x: .2
                FlatButton:
                    text: 'Room number'
                    size_hint_x: .1
                FlatButton:
                    text: 'EMG #'
                    size_hint_x: .2
                FlatButton:
                    text: 'RFID Tag'
                    size_hint_x: .2
                FlatButton:
                    text: ''
                    size_hint_x: .2

            BoxLayout:
                id: patient_inputs
                size_hint_y: None
                height: 30
                spacing: 5
                TextInput:
                    id: Check_inp
                    size_hint_x: .1
                TextInput:
                    id: PID_inp
                    size_hint_x: .2
                    multiline: False
                    on_text_validate: root.update_patient()
                TextInput:
                    id: RN_inp
                    size_hint_x: .1
                TextInput:
                    id: EMG_inp
                    size_hint_x: .2
                TextInput:
                    id: risk_inp
                    size_hint_x: .2
                FlatButton:
                    id: reset_inp
                    size_hint_x: .2

            BoxLayout:
                id: add_to_database
                orientation: 'vertical'
                
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (.15,.15,.15, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Check In'
                        size_hint_x: .1
                    Label:
                        text: 'Patient ID'
                        size_hint_x: .2
                    Label:
                        text: 'Room number'
                        size_hint_x: .1
                        
                    Label:
                        text: 'EMG #'
                        size_hint_x: .2
                    Label:
                        text: 'Risk'
                        size_hint_x: .2
                    Label:
                        text: 'Reset'
                        size_hint_x: .2
                GridLayout:
                    id: patients
                    cols: 1
        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2

            TextInput:
                id: reset_preview
                readonly: True
                text: 'Winter Haven Hospital\n200 Ave F NE\nWinter Haven, FL 33881\n\nTel: (863) 293-1121\nHospital No: \nDate: \n\n'