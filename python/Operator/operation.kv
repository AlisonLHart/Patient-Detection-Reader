<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size:self.size 
            pos:self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.45,.06,.45, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Label:
            text: 'Patient Detection Reader'
            size_hint_x: .9
            bold: True
        FlatButton:
            id: loggedin_user
            text: 'jdoe'
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Button:
            id: cur_patient
            text: 'Current Patient: '
            background_normal: ''
            background_color: (.32,.06,.32, 1)
        Button:
            id: cur_condition
            text: 'Default Condition'
            background_normal: ''
            background_color: (.4,.06,.4, 1)
        Button:
            id: cur_reset
            text: 'RESET'
            background_normal: ''
            background_color: (.65,.06,.65, 1)
