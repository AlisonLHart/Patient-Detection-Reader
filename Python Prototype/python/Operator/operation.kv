<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.2,.2,.2, 1)
        Rectangle:
            size:self.size 
            pos:self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.1,.1,.1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Label:
            text: 'Patient Detection Reader'
            size_hint_x: .9
            bold: True
        FlatButton:
            id: loggedin_user
            text: 'jdoe'
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size:self.size 
                pos:self.pos
        Button:
            id: cur_patient
            text: 'This is a prototype'
            background_normal: ''
            background_color:(.15,.15,.15, 1)
            size_hint_x: .4
        Button:
            id: cur_condition
            text: 'things are not done yet'
            background_normal: ''
            background_color: (.15,.15,.15, 1)
    BoxLayout:
        padding: 10
        BoxLayout:
            id: patient_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10
            BoxLayout:
                id: content
                size_hint_x: .8
                padding: (20,10)
                ScreenManager:
                    id: scrnMngr
                    Screen:
                        id: scrnPatientContent
                        name: 'scrnPatientContent'
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 10
                            BoxLayout:
                                id: scrnPatientContents
                            BoxLayout:
                                id: opsFieldsP
                                spacing: 10
                                size_hint_y: None
                                height: 35
                            BoxLayout:
                                id: opsBtnsP
                                spacing: 10
                                size_hint_y: None
                                height: 45
                                Button:
                                    id: crudAddP
                                    text: 'Add Patient'
                                    on_release: root.add_patient_fields()
                                Button:
                                    id: crudUpdateP
                                    text: 'Update Patient'
                                    on_release: root.update_patient_fields()
        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2

            TextInput:
                id: reset_preview
                readonly: True
                text: 'Winter Haven Hospital\n200 Ave F NE\nWinter Haven, FL 33881\n\nTel: (863) 293-1121\nHospital No:378b \n\n'
    

    BoxLayout:
        id: footer
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.15,.15,.15, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Maintained by FL Poly Sr.Design group number 7"